<style>
body {
	font-family: 'Roboto', sans-serif;
	background-color: #f8f9fa;
	padding-top: 70px; /* Adjust for fixed navbar */
}

/* Navbar Styling */
.navbar {
	background-color: #343a40;
	padding: 12px 20px;
}

.navbar-brand {
	color: white;
	font-weight: bold;
	font-size: 20px;
}

.nav-link {
	color: white !important;
	font-weight: 500;
}

.container-box {
	background-color: #fff;
	padding: 40px;
