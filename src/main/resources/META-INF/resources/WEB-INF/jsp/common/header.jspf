	background-color: #f4f4f4;
	padding: 20px;
}

.container {
	margin-top: 30px;
}

.completed {
	color: green;
	font-weight: bold;
}

.not-completed {
	color: orange;
	font-weight: bold;
}

.status-label {
	font-weight: bold;
}

